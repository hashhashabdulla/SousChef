<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/lightblue">

    <ImageView
        android:id="@+id/recipeImage3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/recipeName2"
        android:textColor="@color/bgcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/recipeImage3"
        android:layout_toRightOf="@+id/recipeImage3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/listRatingBar2"
        android:progressTint="@color/bgcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:ratingBarStyleSmall"
        android:layout_below="@+id/recipeName2"
        android:layout_alignLeft="@id/recipeName2"
        android:layout_alignStart="@id/recipeName2"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listRatingBar2"
        android:layout_alignLeft="@+id/listRatingBar2"
        android:layout_alignStart="@id/listRatingBar2"
        android:layout_marginTop="5dp"/>
</RelativeLayout>